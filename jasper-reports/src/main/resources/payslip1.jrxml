<jasperReport name="ProfessionalPayslip" language="java" pageWidth="595" pageHeight="842"
    columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <!-- Fields -->
    <field name="employeeName" class="java.lang.String"/>
    <field name="employeeId" class="java.lang.String"/>
    <field name="designation" class="java.lang.String"/>
    <field name="department" class="java.lang.String"/>
    <field name="basicPay" class="java.lang.Float"/>
    <field name="hra" class="java.lang.Float"/>
    <field name="allowances" class="java.lang.Float"/>
    <field name="tax" class="java.lang.Float"/>
    <field name="pf" class="java.lang.Float"/>
    <field name="otherDeductions" class="java.lang.Float"/>
    <field name="netPay" class="java.lang.Float"/>
    <field name="month" class="java.lang.String"/>
    <field name="year" class="java.lang.Integer"/>

    <!-- Title / Header -->
    <title>
        <band height="80">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="16" isBold="true"/>
                </textElement>
                <text><![CDATA[Company XYZ Pvt Ltd]]></text>
            </staticText>
            <staticText>
                <reportElement x="0" y="35" width="555" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="14"/>
                </textElement>
                <text><![CDATA[Payslip for $F{month} $F{year}]]></text>
            </staticText>
        </band>
    </title>

    <!-- Employee Details Section -->
    <detail>
        <band height="100">
            <frame>
                <reportElement x="0" y="0" width="555" height="100" backcolor="#F0F0F0" mode="Opaque"/>
                <staticText><reportElement x="10" y="5" width="120" height="20"/><text><![CDATA[Employee ID]]></text></staticText>
                <textField><reportElement x="130" y="5" width="150" height="20"/><textFieldExpression><![CDATA[$F{employeeId}]]></textFieldExpression></textField>

                <staticText><reportElement x="300" y="5" width="120" height="20"/><text><![CDATA[Employee Name]]></text></staticText>
                <textField><reportElement x="420" y="5" width="120" height="20"/><textFieldExpression><![CDATA[$F{employeeName}]]></textFieldExpression></textField>

                <staticText><reportElement x="10" y="35" width="120" height="20"/><text><![CDATA[Designation]]></text></staticText>
                <textField><reportElement x="130" y="35" width="150" height="20"/><textFieldExpression><![CDATA[$F{designation}]]></textFieldExpression></textField>

                <staticText><reportElement x="300" y="35" width="120" height="20"/><text><![CDATA[Department]]></text></staticText>
                <textField><reportElement x="420" y="35" width="120" height="20"/><textFieldExpression><![CDATA[$F{department}]]></textFieldExpression></textField>
            </frame>
        </band>
    </detail>

    <!-- Earnings and Deductions Table Section -->
    <detail>
        <band height="120">
            <!-- Earnings Table -->
            <frame>
                <reportElement x="0" y="0" width="270" height="120" backcolor="#DFF0D8" mode="Opaque"/>
                <staticText><reportElement x="10" y="5" width="250" height="20"/><textElement><font isBold="true"/></textElement><text><![CDATA[Earnings]]></text></staticText>

                <staticText><reportElement x="10" y="30" width="120" height="20"/><text><![CDATA[Basic Pay]]></text></staticText>
                <textField><reportElement x="140" y="30" width="120" height="20"/><textFieldExpression><![CDATA[$F{basicPay}]]></textFieldExpression></textField>

                <staticText><reportElement x="10" y="55" width="120" height="20"/><text><![CDATA[HRA]]></text></staticText>
                <textField><reportElement x="140" y="55" width="120" height="20"/><textFieldExpression><![CDATA[$F{hra}]]></textFieldExpression></textField>

                <staticText><reportElement x="10" y="80" width="120" height="20"/><text><![CDATA[Allowances]]></text></staticText>
                <textField><reportElement x="140" y="80" width="120" height="20"/><textFieldExpression><![CDATA[$F{allowances}]]></textFieldExpression></textField>
            </frame>

            <!-- Deductions Table -->
            <frame>
                <reportElement x="285" y="0" width="270" height="120" backcolor="#F2DEDE" mode="Opaque"/>
                <staticText><reportElement x="10" y="5" width="250" height="20"/><textElement><font isBold="true"/></textElement><text><![CDATA[Deductions]]></text></staticText>

                <staticText><reportElement x="10" y="30" width="120" height="20"/><text><![CDATA[Tax]]></text></staticText>
                <textField><reportElement x="140" y="30" width="120" height="20"/><textFieldExpression><![CDATA[$F{tax}]]></textFieldExpression></textField>

                <staticText><reportElement x="10" y="55" width="120" height="20"/><text><![CDATA[PF]]></text></staticText>
                <textField><reportElement x="140" y="55" width="120" height="20"/><textFieldExpression><![CDATA[$F{pf}]]></textFieldExpression></textField>

                <staticText><reportElement x="10" y="80" width="120" height="20"/><text><![CDATA[Other]]></text></staticText>
                <textField><reportElement x="140" y="80" width="120" height="20"/><textFieldExpression><![CDATA[$F{otherDeductions}]]></textFieldExpression></textField>
            </frame>
        </band>
    </detail>

    <!-- Net Pay Section -->
    <detail>
        <band height="40">
            <frame>
                <reportElement x="0" y="0" width="555" height="40" backcolor="#FCF8E3" mode="Opaque"/>
                <staticText><reportElement x="10" y="10" width="120" height="20"/><textElement><font isBold="true"/></textElement><text><![CDATA[Net Pay]]></text></staticText>
                <textField><reportElement x="140" y="10" width="120" height="20"/><textFieldExpression><![CDATA[$F{netPay}]]></textFieldExpression></textField>
            </frame>
        </band>
    </detail>

    <!-- Footer / Signature -->
    <pageFooter>
        <band height="50">
            <staticText><reportElement x="0" y="10" width="200" height="20"/><text><![CDATA[Employee Signature]]></text></staticText>
            <staticText><reportElement x="355" y="10" width="200" height="20"/><text><![CDATA[Authorized Signature]]></text></staticText>
        </band>
    </pageFooter>

</jasperReport>
