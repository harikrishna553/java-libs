<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="SalesDashboard" pageWidth="842" pageHeight="595" orientation="Landscape"
              columnWidth="802" leftMargin="20" rightMargin="20" topMargin="30" bottomMargin="30">

    <parameter name="REPORT_TITLE" class="java.lang.String"/>
    <parameter name="TOTAL_SALES" class="java.math.BigDecimal"/>
    <parameter name="REPORT_DATE" class="java.util.Date"/>

    <field name="region" class="java.lang.String"/>
    <field name="product" class="java.lang.String"/>
    <field name="salesperson" class="java.lang.String"/>
    <field name="saleDate" class="java.util.Date"/>
    <field name="amount" class="java.math.BigDecimal"/>
    <field name="quantity" class="java.lang.Integer"/>
    <field name="category" class="java.lang.String"/>
    <field name="customer" class="java.lang.String"/>
    <field name="commission" class="java.math.BigDecimal"/>

    <variable name="REGION_TOTAL" class="java.math.BigDecimal" resetType="Group" resetGroup="RegionGroup" calculation="Sum">
        <variableExpression><![CDATA[$F{amount}]]></variableExpression>
    </variable>

    <group name="RegionGroup">
        <groupExpression><![CDATA[$F{region}]]></groupExpression>
        <groupHeader>
            <band height="30">
                <textField>
                    <reportElement x="0" y="5" width="200" height="20" mode="Opaque" backcolor="#E6E6FA"/>
                    <box><pen lineWidth="1.0"/></box>
                    <textElement textAlignment="Left" verticalAlignment="Middle">
                        <font size="12" isBold="true"/>
                    </textElement>
                    <textFieldExpression><![CDATA["Region: " + $F{region}]]></textFieldExpression>
                </textField>
            </band>
        </groupHeader>
        <groupFooter>
            <band height="25">
                <textField pattern="$#,##0.00">
                    <reportElement x="600" y="5" width="100" height="15" mode="Opaque" backcolor="#F0F0F0"/>
                    <box><pen lineWidth="1.0"/></box>
                    <textElement textAlignment="Right" verticalAlignment="Middle">
                        <font isBold="true"/>
                    </textElement>
                    <textFieldExpression><![CDATA[$V{REGION_TOTAL}]]></textFieldExpression>
                </textField>
                <staticText>
                    <reportElement x="500" y="5" width="100" height="15" mode="Opaque" backcolor="#F0F0F0"/>
                    <box><pen lineWidth="1.0"/></box>
                    <textElement textAlignment="Right" verticalAlignment="Middle">
                        <font isBold="true"/>
                    </textElement>
                    <text><![CDATA[Region Total:]]></text>
                </staticText>
            </band>
        </groupFooter>
    </group>

    <title>
        <band height="80" splitType="Stretch">
            <textField>
                <reportElement x="0" y="10" width="802" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="20" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{REPORT_TITLE}]]></textFieldExpression>
            </textField>
            <textField pattern="MMMMM dd, yyyy">
                <reportElement x="650" y="50" width="152" height="20"/>
                <textElement textAlignment="Right">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["Generated on: " + $P{REPORT_DATE}]]></textFieldExpression>
            </textField>
            <textField pattern="$#,##0.00">
                <reportElement x="0" y="50" width="200" height="20"/>
                <textElement textAlignment="Left">
                    <font size="12" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Total Sales: " + $P{TOTAL_SALES}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <pageHeader>
        <band height="25">
            <rectangle>
                <reportElement x="0" y="0" width="802" height="25" backcolor="#4682B4"/>
                <graphicElement>
                    <pen lineWidth="1.0"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="5" y="5" width="80" height="15" />
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Product]]></text>
            </staticText>
            <staticText>
                <reportElement x="90" y="5" width="100" height="15" />
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Salesperson]]></text>
            </staticText>
            <staticText>
                <reportElement x="195" y="5" width="80" height="15" />
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Date]]></text>
            </staticText>
            <staticText>
                <reportElement x="280" y="5" width="80" height="15" />
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Amount]]></text>
            </staticText>
            <staticText>
                <reportElement x="365" y="5" width="50" height="15" />
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Qty]]></text>
            </staticText>
            <staticText>
                <reportElement x="420" y="5" width="80" height="15" />
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Category]]></text>
            </staticText>
            <staticText>
                <reportElement x="505" y="5" width="120" height="15" />
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Customer]]></text>
            </staticText>
            <staticText>
                <reportElement x="630" y="5" width="70" height="15" />
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Commission]]></text>
            </staticText>
        </band>
    </pageHeader>

    <detail>
        <band height="20" splitType="Stretch">
            <textField>
                <reportElement x="5" y="2" width="80" height="16"/>
                <box><pen lineWidth="0.5" lineColor="#CCCCCC"/></box>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{product}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="90" y="2" width="100" height="16"/>
                <box><pen lineWidth="0.5" lineColor="#CCCCCC"/></box>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{salesperson}]]></textFieldExpression>
            </textField>
            <textField pattern="MM/dd/yyyy">
                <reportElement x="195" y="2" width="80" height="16"/>
                <box><pen lineWidth="0.5" lineColor="#CCCCCC"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{saleDate}]]></textFieldExpression>
            </textField>
            <textField pattern="$#,##0.00">
                <reportElement x="280" y="2" width="80" height="16"/>
                <box><pen lineWidth="0.5" lineColor="#CCCCCC"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{amount}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="365" y="2" width="50" height="16"/>
                <box><pen lineWidth="0.5" lineColor="#CCCCCC"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{quantity}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="420" y="2" width="80" height="16"/>
                <box><pen lineWidth="0.5" lineColor="#CCCCCC"/></box>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{category}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="505" y="2" width="120" height="16"/>
                <box><pen lineWidth="0.5" lineColor="#CCCCCC"/></box>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{customer}]]></textFieldExpression>
            </textField>
            <textField pattern="$#,##0.00">
                <reportElement x="630" y="2" width="70" height="16"/>
                <box><pen lineWidth="0.5" lineColor="#CCCCCC"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{commission}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <pageFooter>
        <band height="20">
            <textField>
                <reportElement x="0" y="5" width="100" height="15"/>
                <textElement textAlignment="Left">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["Page " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
            <textField evaluationTime="Report">
                <reportElement x="702" y="5" width="100" height="15"/>
                <textElement textAlignment="Right">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[" of " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

    <summary>
        <band height="60">
            <rectangle>
                <reportElement x="0" y="10" width="802" height="40" backcolor="#F5F5F5"/>
                <graphicElement>
                    <pen lineWidth="1.0"/>
                </graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="10" y="20" width="150" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[Report Summary:]]></text>
            </staticText>
            <textField>
                <reportElement x="170" y="20" width="200" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["Total Records: " + $V{REPORT_COUNT}]]></textFieldExpression>
            </textField>
            <textField pattern="$#,##0.00">
                <reportElement x="400" y="20" width="200" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["Grand Total: " + $P{TOTAL_SALES}]]></textFieldExpression>
            </textField>
        </band>
    </summary>
</jasperReport>
