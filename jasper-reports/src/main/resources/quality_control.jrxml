<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="QualityControl" pageWidth="842" pageHeight="595" orientation="Landscape"
              columnWidth="802" leftMargin="20" rightMargin="20" topMargin="30" bottomMargin="30">

    <parameter name="REPORT_TITLE" class="java.lang.String"/>
    <parameter name="REPORT_DATE" class="java.util.Date"/>
    <parameter name="QC_MANAGER" class="java.lang.String"/>
    <parameter name="TOTAL_INSPECTIONS" class="java.lang.Integer"/>
    <parameter name="PASS_RATE" class="java.lang.Double"/>

    <field name="batchNumber" class="java.lang.String"/>
    <field name="productCode" class="java.lang.String"/>
    <field name="productName" class="java.lang.String"/>
    <field name="inspectionDate" class="java.util.Date"/>
    <field name="inspector" class="java.lang.String"/>
    <field name="shift" class="java.lang.String"/>
    <field name="unitsInspected" class="java.lang.Integer"/>
    <field name="defectsFound" class="java.lang.Integer"/>
    <field name="defectType" class="java.lang.String"/>
    <field name="severity" class="java.lang.String"/>
    <field name="result" class="java.lang.String"/>
    <field name="correctionAction" class="java.lang.String"/>
    <field name="defectRate" class="java.math.BigDecimal"/>
    <field name="qualityScore" class="java.lang.String"/>

    <variable name="TOTAL_UNITS" class="java.lang.Integer" calculation="Sum">
        <variableExpression><![CDATA[$F{unitsInspected}]]></variableExpression>
    </variable>

    <variable name="TOTAL_DEFECTS" class="java.lang.Integer" calculation="Sum">
        <variableExpression><![CDATA[$F{defectsFound}]]></variableExpression>
    </variable>

    <title>
        <band height="80">
            <textField>
                <reportElement x="0" y="10" width="802" height="25"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="18" isBold="true" />
                </textElement>
                <textFieldExpression><![CDATA[$P{REPORT_TITLE}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="45" width="200" height="15"/>
                <textElement textAlignment="Left">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["QC Manager: " + $P{QC_MANAGER}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="250" y="45" width="150" height="15"/>
                <textElement textAlignment="Left">
                    <font size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Total Inspections: " + $P{TOTAL_INSPECTIONS}]]></textFieldExpression>
            </textField>
            <textField pattern="#,##0.0%">
                <reportElement x="450" y="45" width="150" height="15"/>
                <textElement textAlignment="Left">
                    <font size="10" isBold="true" />
                </textElement>
                <textFieldExpression><![CDATA["Pass Rate: " + ($P{PASS_RATE} / 100.0)]]></textFieldExpression>
            </textField>
            <textField pattern="MMMMM dd, yyyy HH:mm">
                <reportElement x="650" y="60" width="152" height="15"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Generated: " + $P{REPORT_DATE}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <columnHeader>
        <band height="30">
            <rectangle>
                <reportElement x="0" y="5" width="802" height="25" backcolor="#DC143C"/>
            </rectangle>
            <staticText>
                <reportElement x="5" y="10" width="70" height="15" />
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Batch #]]></text>
            </staticText>
            <staticText>
                <reportElement x="80" y="10" width="60" height="15" />
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Product]]></text>
            </staticText>
            <staticText>
                <reportElement x="145" y="10" width="120" height="15" />
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Product Name]]></text>
            </staticText>
            <staticText>
                <reportElement x="270" y="10" width="65" height="15" />
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Date]]></text>
            </staticText>
            <staticText>
                <reportElement x="340" y="10" width="70" height="15" />
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Inspector]]></text>
            </staticText>
            <staticText>
                <reportElement x="415" y="10" width="40" height="15" />
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Units]]></text>
            </staticText>
            <staticText>
                <reportElement x="460" y="10" width="45" height="15" />
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Defects]]></text>
            </staticText>
            <staticText>
                <reportElement x="510" y="10" width="50" height="15" />
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Rate %]]></text>
            </staticText>
            <staticText>
                <reportElement x="565" y="10" width="60" height="15" />
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Result]]></text>
            </staticText>
            <staticText>
                <reportElement x="630" y="10" width="30" height="15" />
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Grade]]></text>
            </staticText>
            <staticText>
                <reportElement x="665" y="10" width="130" height="15" />
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="8" isBold="true"/>
                </textElement>
                <text><![CDATA[Correction Action]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="18" splitType="Stretch">
            <textField>
                <reportElement x="5" y="2" width="70" height="14"/>
                <box><pen lineWidth="0.5" lineColor="#CCCCCC"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="7"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{batchNumber}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="80" y="2" width="60" height="14"/>
                <box><pen lineWidth="0.5" lineColor="#CCCCCC"/></box>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="7"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{productCode}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="145" y="2" width="120" height="14"/>
                <box><pen lineWidth="0.5" lineColor="#CCCCCC"/></box>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="7"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{productName}]]></textFieldExpression>
            </textField>
            <textField pattern="MM/dd/yy">
                <reportElement x="270" y="2" width="65" height="14"/>
                <box><pen lineWidth="0.5" lineColor="#CCCCCC"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="7"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{inspectionDate}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="340" y="2" width="70" height="14"/>
                <box><pen lineWidth="0.5" lineColor="#CCCCCC"/></box>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="7"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{inspector}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="415" y="2" width="40" height="14"/>
                <box><pen lineWidth="0.5" lineColor="#CCCCCC"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="7"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{unitsInspected}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="460" y="2" width="45" height="14"/>
                <box><pen lineWidth="0.5" lineColor="#CCCCCC"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="7"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{defectsFound}]]></textFieldExpression>
            </textField>
            <textField pattern="#,##0.00%">
                <reportElement x="510" y="2" width="50" height="14"/>
                <box><pen lineWidth="0.5" lineColor="#CCCCCC"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="7"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{defectRate}.divide(new java.math.BigDecimal(100))]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="565" y="2" width="60" height="14">
                </reportElement>
                <box><pen lineWidth="0.5" lineColor="#CCCCCC"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="7"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{result}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="630" y="2" width="30" height="14">
                </reportElement>
                <box><pen lineWidth="0.5" lineColor="#CCCCCC"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="7"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{qualityScore}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="665" y="2" width="130" height="14"/>
                <box><pen lineWidth="0.5" lineColor="#CCCCCC"/></box>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="6"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{correctionAction}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <pageFooter>
        <band height="20">
            <textField>
                <reportElement x="0" y="5" width="100" height="15"/>
                <textElement textAlignment="Left">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["Page " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
            <textField evaluationTime="Report">
                <reportElement x="702" y="5" width="100" height="15"/>
                <textElement textAlignment="Right">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[" of " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="300" y="5" width="200" height="15"/>
                <textElement textAlignment="Center">
                    <font size="8" isItalic="true"/>
                </textElement>
                <text><![CDATA[Quality Control Department - Confidential]]></text>
            </staticText>
        </band>
    </pageFooter>

    <summary>
        <band height="60">
            <rectangle>
                <reportElement x="0" y="10" width="802" height="40" backcolor="#FFE4E1"/>
                <graphicElement><pen lineWidth="1.0"/></graphicElement>
            </rectangle>
            <staticText>
                <reportElement x="10" y="20" width="100" height="15"/>
                <textElement verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Quality Summary:]]></text>
            </staticText>
            <textField>
                <reportElement x="120" y="20" width="150" height="15"/>
                <textElement verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Total Units Inspected: " + $V{TOTAL_UNITS}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="300" y="20" width="150" height="15"/>
                <textElement verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Total Defects Found: " + $V{TOTAL_DEFECTS}]]></textFieldExpression>
            </textField>
            <textField pattern="#,##0.0%">
                <reportElement x="500" y="20" width="150" height="15"/>
                <textElement verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Overall Pass Rate: " + ($P{PASS_RATE} / 100.0)]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement x="10" y="35" width="700" height="10"/>
                <textElement verticalAlignment="Middle">
                    <font size="7"/>
                </textElement>
                <text><![CDATA[Legend: Green=Pass, Yellow=Conditional Pass, Pink=Fail - Quality Scores: A=Excellent, B=Good, C=Needs Improvement, F=Critical]]></text>
            </staticText>
        </band>
    </summary>
</jasperReport>
